# ==============================================================================
# FESTIVALS MOBILE APP - ENVIRONMENT CONFIGURATION (Expo/React Native)
# ==============================================================================
# Copy this file to .env for local development:
#   cp .env.example .env
#
# Expo Environment Variable Rules:
#   - EXPO_PUBLIC_* variables are bundled into the app and accessible at runtime
#   - These values are embedded at build time and visible in the app bundle
#   - NEVER put secrets in EXPO_PUBLIC_* variables!
#   - Secrets should be fetched from your backend API at runtime
#
# Platform Notes:
#   - Android Emulator: Use 10.0.2.2 instead of localhost to reach host machine
#   - iOS Simulator: localhost works fine
#   - Physical Device: Use your machine's local IP address (e.g., 192.168.1.x)
#
# Legend:
#   [REQUIRED] - Must be set for the application to work
#   [OPTIONAL] - Has a sensible default, override if needed
# ==============================================================================


# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# [REQUIRED] Backend API URL
# The URL your mobile app uses to communicate with the backend
#
# Development options:
#   - localhost:8080          (iOS Simulator only)
#   - 10.0.2.2:8080          (Android Emulator - maps to host's localhost)
#   - 192.168.x.x:8080       (Physical device - use your machine's IP)
#   - your-ngrok-url.ngrok.io (For testing webhooks/external access)
#
EXPO_PUBLIC_API_URL=http://localhost:8080

# [OPTIONAL] WebSocket URL for real-time features
# Usually same host as API but with ws:// protocol
EXPO_PUBLIC_WS_URL=ws://localhost:8080/ws


# ==============================================================================
# AUTH0 CONFIGURATION
# ==============================================================================

# [REQUIRED] Auth0 tenant domain (without https://)
EXPO_PUBLIC_AUTH0_DOMAIN=your-tenant.eu.auth0.com

# [REQUIRED] Auth0 Native/Mobile application Client ID
# This should be a separate Auth0 application from web apps
# Get from: Auth0 Dashboard > Applications > Your Mobile App > Settings
EXPO_PUBLIC_AUTH0_CLIENT_ID=your-mobile-auth0-client-id

# [REQUIRED] Auth0 API audience (must match backend configuration)
EXPO_PUBLIC_AUTH0_AUDIENCE=https://api.festivals.app

# [OPTIONAL] Custom scheme for Auth0 callback (must match app.json scheme)
# Used for deep linking after authentication
EXPO_PUBLIC_AUTH0_SCHEME=festivals


# ==============================================================================
# STRIPE CONFIGURATION
# ==============================================================================

# [REQUIRED] Stripe publishable key (safe to embed in app)
# Get from: Stripe Dashboard > Developers > API keys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# [OPTIONAL] Stripe merchant identifier for Apple Pay
EXPO_PUBLIC_STRIPE_MERCHANT_ID=merchant.com.festivals.app

# [OPTIONAL] Enable Apple Pay
EXPO_PUBLIC_APPLE_PAY_ENABLED=true

# [OPTIONAL] Enable Google Pay
EXPO_PUBLIC_GOOGLE_PAY_ENABLED=true


# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# [OPTIONAL] Enable/disable features in the app
EXPO_PUBLIC_FEATURE_NFC_PAYMENTS=true
EXPO_PUBLIC_FEATURE_WALLET_TOPUP=true
EXPO_PUBLIC_FEATURE_ARTIST_LINEUP=true
EXPO_PUBLIC_FEATURE_LIVE_CHAT=true
EXPO_PUBLIC_FEATURE_AI_CHATBOT=true
EXPO_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_FEATURE_OFFLINE_MODE=true
EXPO_PUBLIC_FEATURE_BIOMETRIC_AUTH=true


# ==============================================================================
# MAPS & LOCATION
# ==============================================================================

# [OPTIONAL] Google Maps API key (for Android maps)
# Get from: Google Cloud Console > APIs & Services > Credentials
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# [OPTIONAL] Mapbox access token (alternative to Google Maps)
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token


# ==============================================================================
# PUSH NOTIFICATIONS
# ==============================================================================

# [OPTIONAL] Expo project ID (for Expo Push Notifications)
# Get from: expo.dev > Your Project > Project ID
EXPO_PUBLIC_EXPO_PROJECT_ID=your-expo-project-id

# [OPTIONAL] OneSignal App ID (alternative push notification service)
EXPO_PUBLIC_ONESIGNAL_APP_ID=your-onesignal-app-id


# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================

# [OPTIONAL] Sentry DSN for crash reporting and error tracking
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# [OPTIONAL] Amplitude API key (for product analytics)
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-api-key

# [OPTIONAL] Mixpanel token (alternative analytics)
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# [OPTIONAL] PostHog API key
EXPO_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com


# ==============================================================================
# APP CONFIGURATION
# ==============================================================================

# [OPTIONAL] Application name
EXPO_PUBLIC_APP_NAME=Festivals

# [OPTIONAL] Default language/locale
EXPO_PUBLIC_DEFAULT_LOCALE=en

# [OPTIONAL] Available locales (comma-separated)
EXPO_PUBLIC_LOCALES=en,fr,nl,de,es

# [OPTIONAL] Default timezone
EXPO_PUBLIC_DEFAULT_TIMEZONE=Europe/Paris

# [OPTIONAL] Support email address (displayed in Help section)
EXPO_PUBLIC_SUPPORT_EMAIL=support@festivals.app

# [OPTIONAL] Privacy policy URL
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://festivals.app/privacy

# [OPTIONAL] Terms of service URL
EXPO_PUBLIC_TERMS_URL=https://festivals.app/terms


# ==============================================================================
# NFC CONFIGURATION
# ==============================================================================

# [OPTIONAL] Enable NFC features (Android only, iOS requires specific entitlements)
EXPO_PUBLIC_NFC_ENABLED=true

# [OPTIONAL] NFC tag type for wristband reading
EXPO_PUBLIC_NFC_TAG_TYPE=NDEF


# ==============================================================================
# STORAGE & CACHING
# ==============================================================================

# [OPTIONAL] Image CDN URL for festival images
EXPO_PUBLIC_IMAGE_CDN_URL=http://localhost:9000/festivals

# [OPTIONAL] Enable offline data caching
EXPO_PUBLIC_OFFLINE_CACHE_ENABLED=true

# [OPTIONAL] Cache TTL in seconds (default: 5 minutes)
EXPO_PUBLIC_CACHE_TTL=300


# ==============================================================================
# DEVELOPMENT & DEBUGGING
# ==============================================================================

# [OPTIONAL] Enable debug mode (shows additional logging, dev tools)
EXPO_PUBLIC_DEBUG=false

# [OPTIONAL] Enable React Query devtools
EXPO_PUBLIC_REACT_QUERY_DEVTOOLS=false

# [OPTIONAL] Enable Flipper debugging (requires Flipper desktop app)
EXPO_PUBLIC_FLIPPER_ENABLED=false

# [OPTIONAL] Mock API responses (for offline development)
EXPO_PUBLIC_MOCK_API=false
