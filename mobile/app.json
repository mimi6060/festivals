{
  "expo": {
    "name": "Festivals",
    "slug": "festivals",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "festivals",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.festivals.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Permet de scanner les QR codes pour les paiements et l'entr√©e",
        "NSLocationWhenInUseUsageDescription": "Permet de vous localiser sur la carte du festival"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "package": "app.festivals.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Permet de scanner les QR codes"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Permet de vous localiser sur la carte"
        }
      ],
      [
        "@config-plugins/detox",
        {}
      ]
    ],
    "detox": {
      "skipProguard": true
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
