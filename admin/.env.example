# ==============================================================================
# FESTIVALS ADMIN DASHBOARD - ENVIRONMENT CONFIGURATION (Next.js)
# ==============================================================================
# Copy this file to .env.local for local development:
#   cp .env.example .env.local
#
# Next.js Environment Variable Rules:
#   - NEXT_PUBLIC_* variables are exposed to the browser (client-side)
#   - All other variables are server-side only
#   - Never put secrets in NEXT_PUBLIC_* variables!
#
# Legend:
#   [REQUIRED] - Must be set for the application to work
#   [OPTIONAL] - Has a sensible default, override if needed
#   [PUBLIC] - Exposed to browser (NEXT_PUBLIC_* prefix)
# ==============================================================================


# ==============================================================================
# ENVIRONMENT
# ==============================================================================

# [OPTIONAL] Node environment
NODE_ENV=development


# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# [REQUIRED] [PUBLIC] Backend API URL for client-side requests
# This URL must be accessible from the user's browser
NEXT_PUBLIC_API_URL=http://localhost:8080

# [OPTIONAL] [PUBLIC] WebSocket URL for real-time features (chat, notifications)
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# [OPTIONAL] Backend API URL for server-side requests (can be internal Docker URL)
# If not set, NEXT_PUBLIC_API_URL is used
API_URL=http://localhost:8080


# ==============================================================================
# AUTH0 CONFIGURATION
# ==============================================================================

# --- Server-side Auth0 (NextAuth.js / Auth0 SDK) ---

# [REQUIRED] Random secret for encrypting session cookies
# Generate with: openssl rand -base64 32
# Minimum 32 characters for security
AUTH0_SECRET=generate-a-random-32-character-secret-here

# [REQUIRED] Base URL of your application (where Auth0 redirects after login)
AUTH0_BASE_URL=http://localhost:3000

# [REQUIRED] Auth0 issuer URL (your tenant URL with https://)
AUTH0_ISSUER_BASE_URL=https://your-tenant.eu.auth0.com

# [REQUIRED] Auth0 application Client ID
# Get from: Auth0 Dashboard > Applications > Your App > Settings
AUTH0_CLIENT_ID=your-auth0-client-id

# [REQUIRED] Auth0 application Client Secret
# Get from: Auth0 Dashboard > Applications > Your App > Settings
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# [REQUIRED] Auth0 API audience (must match backend configuration)
AUTH0_AUDIENCE=https://api.festivals.app

# [OPTIONAL] Auth0 scopes to request
AUTH0_SCOPE=openid profile email offline_access

# --- Client-side Auth0 (for components that need Auth0 info) ---

# [OPTIONAL] [PUBLIC] Auth0 domain (without https://)
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.eu.auth0.com

# [OPTIONAL] [PUBLIC] Auth0 Client ID (safe to expose)
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id

# [OPTIONAL] [PUBLIC] Auth0 API audience
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.festivals.app


# ==============================================================================
# STRIPE CONFIGURATION
# ==============================================================================

# [REQUIRED] [PUBLIC] Stripe publishable key (safe to expose)
# Get from: Stripe Dashboard > Developers > API keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# [OPTIONAL] Stripe secret key (for server-side operations like refunds)
# Only needed if admin dashboard processes payments directly
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key


# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# [OPTIONAL] [PUBLIC] Enable/disable features in the UI
NEXT_PUBLIC_FEATURE_NFC_PAYMENTS=true
NEXT_PUBLIC_FEATURE_WALLET_TOPUP=true
NEXT_PUBLIC_FEATURE_ARTIST_LINEUP=true
NEXT_PUBLIC_FEATURE_LIVE_CHAT=true
NEXT_PUBLIC_FEATURE_AI_CHATBOT=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_MAPS=true


# ==============================================================================
# MAPS & LOCATION
# ==============================================================================

# [OPTIONAL] [PUBLIC] Google Maps API key (for interactive maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# [OPTIONAL] [PUBLIC] Mapbox access token (alternative to Google Maps)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token


# ==============================================================================
# FILE UPLOADS
# ==============================================================================

# [OPTIONAL] [PUBLIC] Maximum file upload size in bytes (default: 10MB)
NEXT_PUBLIC_MAX_UPLOAD_SIZE=10485760

# [OPTIONAL] [PUBLIC] Allowed file types for uploads (comma-separated MIME types)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf


# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================

# [OPTIONAL] [PUBLIC] Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# [OPTIONAL] Sentry auth token for source map uploads
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# [OPTIONAL] [PUBLIC] Google Analytics tracking ID
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# [OPTIONAL] [PUBLIC] PostHog API key (for product analytics)
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com


# ==============================================================================
# UI CONFIGURATION
# ==============================================================================

# [OPTIONAL] [PUBLIC] Application name (displayed in header/title)
NEXT_PUBLIC_APP_NAME=Festivals Admin

# [OPTIONAL] [PUBLIC] Default locale for i18n
NEXT_PUBLIC_DEFAULT_LOCALE=en

# [OPTIONAL] [PUBLIC] Available locales (comma-separated)
NEXT_PUBLIC_LOCALES=en,fr,nl,de,es

# [OPTIONAL] [PUBLIC] Default timezone for date/time display
NEXT_PUBLIC_DEFAULT_TIMEZONE=Europe/Paris


# ==============================================================================
# DEVELOPMENT
# ==============================================================================

# [OPTIONAL] Enable debug logging in development
DEBUG=false

# [OPTIONAL] Analyze bundle size on build
ANALYZE=false
