# ===========================================
# Festivals Project - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# cp .env.example .env

# -------------------------------------------
# Backend API Configuration
# -------------------------------------------

# Server
PORT=8080
ENVIRONMENT=development

# Database (PostgreSQL)
DATABASE_URL=postgres://festivals:password@localhost:5432/festivals?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# JWT/Security
JWT_SECRET=your-super-secret-key-change-in-production

# Auth0
AUTH0_DOMAIN=your-tenant.eu.auth0.com
AUTH0_AUDIENCE=https://api.festivals.app

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET=festivals

# Postal (Email Service)
POSTAL_URL=http://localhost:5000
POSTAL_API_KEY=your-api-key

# -------------------------------------------
# Admin Dashboard Configuration (Next.js)
# -------------------------------------------

# API URL (for admin dashboard)
NEXT_PUBLIC_API_URL=http://localhost:8080

# Auth0 (Admin)
AUTH0_SECRET=your-auth0-secret-for-nextjs
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.eu.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# -------------------------------------------
# Docker Compose Service Credentials
# -------------------------------------------

# PostgreSQL
POSTGRES_USER=festivals
POSTGRES_PASSWORD=password
POSTGRES_DB=festivals

# MinIO
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
